generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model FuelRequest {
  id              String        @id @default(cuid())
  plateNumber     String
  workerName      String
  workerDNI       String
  amount          Float
  status          RequestStatus @default(PENDING)
  approvalToken   String?       @unique @default(cuid())
  managerEmail    String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  approvedAt      DateTime?     // Nuevo: cuando fue aprobada
  
  @@index([status])
  @@index([createdAt])
  @@index([approvalToken])
}