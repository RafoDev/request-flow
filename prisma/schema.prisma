generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model FuelRequest {
  id            String        @id @default(cuid())
  plateNumber   String
  workerName    String
  workerDNI     String
  amount        Float
  status        RequestStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([status])
  @@index([createdAt])
}